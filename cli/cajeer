#!/usr/bin/env php
<?php
require_once __DIR__ . '/../engine/bootstrap.php';

$cmd = $argv[1] ?? '';
if ($cmd === 'content:install') {
    $cfg = require ROOT_PATH . '/system/config.php';
    \Database\DB::connect($cfg['db']);
    $pdo = \Database\DB::pdo();
    $sql = file_get_contents(ROOT_PATH . '/system/sql/content_v2_1.sql');
    $pdo->exec($sql);
    echo "OK: content schema (v2.1) installed\n";
    exit(0);
}

echo "CajeerEngine CLI\n";
echo "Commands:\n";
echo "  content:install    Install v2.1 content schema\n";
exit(0);
